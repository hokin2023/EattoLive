<div class="comments">
  {{#each this}}
  <div id="card-container">
    <div class="row" id="miko">
      <div class="col s3 m3">
        <div class="card white">
          <section class="comment">
            <div class="card-content black-text">
              <div class="meta">
                {{user.username}} on {{format_date created_at}}
              </div>
              <div class="text">
                {{comment_text}}
              </div>
            </div>
          </section>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>